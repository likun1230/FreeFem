load "msh3"
include "test.idp"

cout << functionDEFINITION << "regions" << endl;

real t;
mesh Th = square(10, 10);
mesh3 Th3 = cube(10, 10, 10);

t = clock();
int[int] reg = regions(Th);
t = clock() - t;
cout << timeELAPSED << t << endl;
test(reg.n == 1);
test(reg[0] == 0);

t = clock();
reg = regions(Th3);
t = clock() - t;
cout << timeELAPSED << t << endl;
test(reg.n == 1);
test(reg[0] == 0);
